<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.menuapplication.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.menuapplication.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.menuapplication.ui.notifications.NotificationsFragment"
        android:label=""
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_price"
        android:name="com.example.menuapplication.ui.price.PriceFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_price" />

    <fragment
        android:id="@+id/navigation_table"
        android:name="com.example.menuapplication.ui.table.TableFragment"
        android:label="Выберите номер стола"
        tools:layout="@layout/fragment_table" />

    <fragment
        android:id="@+id/priceDescription"
        android:name="com.example.menuapplication.ui.price.PriceDescription"
        android:label="fragment_price_description"
        tools:layout="@layout/fragment_price_description" />
</navigation>