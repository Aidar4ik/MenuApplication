<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.price.PriceDescription"
    android:padding="10dp">

    <TextView
        android:id="@+id/desc_name"
        android:text="Гречневая каша"
        android:background="#FF5722"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/desc_desc"/>

    <TextView
        android:text="Каша на натуральном молоке из гречневой крупы.
Porridge on natural milk from buckwheat."
        android:background="#FF5722"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/desc_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/desc_name"
        app:layout_constraintRight_toRightOf="@id/desc_name"
        app:layout_constraintLeft_toLeftOf="@id/desc_name"
        app:layout_constraintBottom_toTopOf="@id/weight_desc"/>

    <TextView
        android:id="@+id/weight_name"
        android:background="#FF5722"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Вес :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc_desc"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/desc_weight"
        android:background="#FF5722"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/weight_name"
        app:layout_constraintTop_toBottomOf="@id/desc_desc"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/weight_desc"
        android:background="#FF5722"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="гр"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/desc_weight"
        app:layout_constraintTop_toBottomOf="@id/desc_desc"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>